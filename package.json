{
	"name": "fanoe",
	"version": "2.0.3",
	"description": "Fanoe WordPress theme",
	"repository": {
		"type": "git",
		"url": "https://github.com/FlorianBrinkmann/fanoe.git"
	},
	"watch": {
		"build:dev": {
			"patterns": [
				"assets/css/scss",
				"assets/js/src"
			]
		}
	},
	"scripts": {
		"watch": "npm-watch",
		"build:production": "webpack -p --env.production && npm run css:rtl && npm run minify-css",
		"build:dev": "webpack --watch",
		"css:rtl": "css-flip assets/css/fanoe.css > assets/css/fanoe-rtl.css",
		"minify-css": "find assets/css/ -iname '*.css' -and -not -iname '*.min.css' -exec sh -c 'node_modules/csso-cli/bin/csso {} --input-map auto --map inline --output ${0%.css}.min.css' {} \\;"
	},
	"author": "Florian Brinkmann",
	"license": "GPLv2 or later",
	"devDependencies": {
		"autoprefixer": "^7.1.2",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-preset-env": "^1.6.0",
		"css-flip": "^0.5.0",
		"css-loader": "^0.28.7",
		"csso-cli": "^1.0.0",
		"extract-loader": "^1.0.1",
		"extract-text-webpack-plugin": "^3.0.0",
		"file-loader": "^0.11.2",
		"node-sass": "^4.5.3",
		"npm-watch": "^0.2.0",
		"postcss-cli": "^4.1.0",
		"postcss-loader": "^2.0.6",
		"run-sequence": "^1.2.2",
		"sass-loader": "^6.0.6",
		"webpack": "^3.5.6"
	},
	"dependencies": {
		"ally.js": "^1.4.1"
	}
}
